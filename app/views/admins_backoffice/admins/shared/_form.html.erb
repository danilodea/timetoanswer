<div class="row">
    <div class="col-lg-12">
        <h1 class="card-header mb-2"><%= action_message %></h1>
    </div>
</div>
<div class="row">
    <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          <ul>
              <% @admin.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
        </div>
    <% end %>
</div>
<div class="card">
  <div class="card-header"><%= t(@admin.model_name.human) %></div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
        <div class="form-group">
            <%= form.label :email, for:"exampleInputEmail1" %>
            <%= form.text_field :email, class: "form-control w-50", id:"exampleInputEmail1", data: {"describedby": "emailHelp"}, placeholder: t('placeholders.admin_email') %>
        </div>
        <div class="form-group mt-3">
            <%= form.label :password, for:"exampleInputPassword1" %>
            <%= form.password_field :password, 
                class: "form-control w-25", 
                id:"exampleInputPassword1", 
                placeholder: t('placeholders.admin_password') %>
        </div>
        <div class="form-group mt-3">
            <%= form.label :password_confirmation, for:"exampleInputPassword2" %>
            <%= form.password_field :password_confirmation, 
                class: "form-control w-25", 
                id:"exampleInputPassword2", 
                placeholder: t('placeholders.admin_password_confirmation') %>        
        </div>
        <button type="submit" class="btn btn-primary mt-3"><%= t('buttons.save') %></button>
    <% end %>
  </div>
</div>