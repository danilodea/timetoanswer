<div class="row">
    <div class="col-lg-12">
        <h1 class="card-header mb-2"><%= t('message.listing', model: @admins.model_name.human(count: 2)) %></h1>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@admins, :email) %></th>
                <th class="text-center">
                    <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success ps-1 pt-0 pe-1 pb-0" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <bady>
            <% @admins.each do |admin| %>
                <tr>
                    <td class="align-middle"><%= admin.id %></td>
                    <td class="align-middle"><%= admin.email %></td>
                    <td class="text-center" style="width: 80px;">
                        <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_admin_path(admin), 
                            method: :delete, 
                            data: {confirm: t('message.confirm_with', item: admin.email.truncate(15))}, 
                            class: "btn btn-danger ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </bady>
    </table>
    <div class='text-center'>
        <div class='d-inline-block'>
            <%= paginate @admins %>
        </div>
    </div>
</div>
