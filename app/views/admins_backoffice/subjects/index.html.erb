<div class="row">
    <div class="col-lg-12">
        <h1 class="card-header mb-2"><%= t('message.listing', model: @subjects.model_name.human(count: 2)) %></h1>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@subjects, :description) %></th>
                <th class="text-center">
                    <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success ps-1 pt-0 pe-1 pb-0" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                    <%= link_to admins_backoffice_subjects_path(format: :pdf), class: "btn btn-danger ps-1 pt-0 pe-1 pb-0" do %>
                        <i class="far fa-file-pdf"></i>
                    <% end %>                       
                </th>
            </tr>
        </thead>
        <bady>
            <% @subjects.each do |subject| %>
                <tr>
                    <td class="align-middle"><%= subject.id %></td>
                    <td class="align-middle"><%= subject.description %></td>
                    <td class="text-center" style="width: 80px;">
                        <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_subject_path(subject), 
                            method: :delete, 
                            data: {confirm: t('message.confirm_with', item: subject.description.truncate(15))}, 
                            class: "btn btn-danger ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </bady>
    </table>
    <div class='text-center'>
        <div class='d-inline-block'>
            <%= paginate @subjects %>
        </div>
    </div>
</div>
