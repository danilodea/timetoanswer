<div class="row">
    <div class="col-lg-12">
        <h1 class="card-header mb-2"><%= action_message %></h1>
    </div>
</div>
<div class="row">
    <% if @subject.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          <ul>
              <% @subject.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
        </div>
    <% end %>
</div>
<div class="card">
  <div class="card-header"><%= t(@subject.model_name.human) %></div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
        <div class="form-group">
            <%= form.label :description, for:"description" %>
            <%= form.text_field :description, 
                class: "form-control w-50", 
                id:"description", 
                data: {"describedby": "emailHelp"}, 
                placeholder: t('placeholders.subject_description') %>
        </div>
        <button type="submit" class="btn btn-primary mt-3"><%= t('buttons.save') %></button>
    <% end %>
  </div>
</div>