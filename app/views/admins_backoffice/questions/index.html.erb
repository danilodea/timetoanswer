<div class="row">
    <div class="col-lg-12">
        <h1 class="card-header mb-2"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@questions, :description) %></th>
                <th><%= translate_attribute(@questions, :subject) %></th>
                <th class="text-center">
                    <%= link_to new_admins_backoffice_question_path, class: "btn btn-success ps-1 pt-0 pe-1 pb-0" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <bady>
            <% @questions.each do |question| %>
                <tr>
                    <td class="align-middle"><%= question.id %></td>
                    <td class="align-middle"><%= question.description.truncate(50) %></td>
                    <td class="align-middle"><%= question.subject.description.truncate(30) %></td>
                    <td class="text-center" style="width: 80px;">
                        <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_question_path(question), 
                            method: :delete, 
                            data: {confirm: t('message.confirm_with', item: question.description.truncate(15))}, 
                            class: "btn btn-danger ps-1 pt-0 pe-1 pb-0" do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </bady>
    </table>
    <div class='text-center'>
        <div class='d-inline-block'>
            <%= paginate @questions %>
        </div>
    </div>
</div>
