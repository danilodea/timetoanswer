<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login Administrativo</h3></div>
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="form-floating mb-3">
                      <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "name@example.com" %>
                      <%= f.label :email, for: "inputEmail" do %>
                        Email address
                      <% end %>
                    </div>
                    
                    <div class="form-floating mb-3">
                      <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password" %>
                      <%= f.label :password, for: "inputPassword" do %>
                        Password
                      <% end %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="form-check mb-3">
                        <%= f.check_box :remember_me, class: "form-check-input", id: "inputRememberPassword" %>
                        <%= f.label :remember_me, class: "form-check-label", for: "inputRememberPassword" do %>
                          Remember Password
                        <% end %>
                      </div>
                    <% end %>

                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <%= f.submit "Login", class: "btn btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>