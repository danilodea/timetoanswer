<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Altere sua senha</h1>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "ConfirmaÃ§Ã£o da Senha" %>
          </div>          
          <div>
            <%= f.submit "Alterar senha", class: "btn btn-primary submit w-50", style: "float: none; margin-left: 0px;" %>
          </div>
          <div class="clearfix"></div>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>